<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RedHerring.Studio.App"
             xmlns:local="using:RedHerring.Studio"
             RequestedThemeVariant="Dark">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <x:Double x:Key="ControlContentThemeFontSize">12</x:Double>
        <x:Double x:Key="TreeViewItemMinHeight">20</x:Double>
        <x:Double x:Key="TextControlThemeMinHeight">20</x:Double>
        <Thickness x:Key="TextControlThemePadding">2, 1</Thickness>
        <Thickness x:Key="ButtonPadding">3,3</Thickness>
        <SolidColorBrush x:Key="PanelBackground">#171717</SolidColorBrush>
        <SolidColorBrush x:Key="PanelTitleBackground">#2273B4</SolidColorBrush>
        <SolidColorBrush x:Key="SplitterBackground">#2C2C2C</SolidColorBrush>
    </Application.Resources>

</Application>