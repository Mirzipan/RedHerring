<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RedHerring.Studio.ViewModels"
             xmlns:models="using:RedHerring.Studio.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RedHerring.Studio.Views.ProjectView"
             x:DataType="vm:ProjectViewModel">
    <Grid RowDefinitions="20,*">
        <TextBlock Grid.Row="0" TextAlignment="Center" Padding="3" Background="{DynamicResource PanelTitleBackground}">Project</TextBlock>
        <ScrollViewer Grid.Row="1" Background="{DynamicResource PanelBackground}">
            <TreeView ItemsSource="{Binding Roots}" SelectionMode="Multiple">
                <TreeView.DataTemplates>

                    <TreeDataTemplate DataType="models:FolderNode" ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                    </TreeDataTemplate>

                    <TreeDataTemplate DataType="models:FileNode">
                        <TextBlock Text="{Binding Name}"/>
                    </TreeDataTemplate>

                </TreeView.DataTemplates>
            </TreeView>
        </ScrollViewer>
    </Grid>
</UserControl>